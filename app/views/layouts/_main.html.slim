/ Main content
section.content-wrap
	/ Breadcrumb
	.page-title
		.row
			.col.s12.m9.l10
				h1= page_title [controller_name.titleize, action_name.titleize].join(' - ')
				ul= render_breadcrumbs tag: :li, separator: "/ &nbsp;"
			.col.s12.m3.l2.right-align
				a.btn.grey.lighten-3.grey-text.chat-toggle href="#!"
					i.fa.fa-comments
	/ Contents
	section#main-content.transition-all
		= flash_notice_as_toast
		= yield